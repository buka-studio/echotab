{
    "extends": "plasmo/templates/tsconfig.base",
    "exclude": ["node_modules"],
    "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
    "compilerOptions": {
        "strict": true,
        "verbatimModuleSyntax": false,
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "paths": {
            "~/*": ["./*"]
        },
        "baseUrl": "."
    }
}

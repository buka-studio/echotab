{
  "name": "echotab",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@echotab/web",
    "dev:extension": "turbo dev --filter=@echotab/extension",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "start:web": "turbo start --filter=@echotab/web",
    "start:extension": "turbo start --filter=@echotab/extension",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "eslint": "9.39.1",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "tailwindcss": "~4.1.17",
    "tw-animate-css": "~1.4.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.3",
      "@types/react-dom": "19.2.3"
    }
  }
}
